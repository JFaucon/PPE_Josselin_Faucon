{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Mes Unités</h1>
        <a href="{{ path('app_reservation') }}" class="btn btn-primary">Obtenir</a>
        <div>
        {% set j = 0 %}
        {% for baie in baies %}
            <div class="baie">
                <div class="baie_name">{{ baie.code }}</div>
                {% for i in 0..41 %}
                    {% if displayUnite[i+(j*42)] %}
                        <div class="uni blue"></div>
                    {% else %}
                        <div class="uni gray"></div>
                    {% endif %}
                {% endfor %}
            </div>
            {% set j=j+1 %}
        {% endfor %}
        </div>
        {% for reservation in reservations %}
            <div class="card mt-4">
                <div class="card-header">
                    <h2>Réservation #{{ reservation.number }}</h2>
                </div>
                <div class="card-body">
                    <p>Forfait : {{ reservation.forfait.name }} x{{ reservation.quantity }}</p>
                    {% if reservation.renewable %}
                        <p>renouvellement automatique <a href="{{ url("app_reservation_edit",{"idReservation":reservation.id}) }}" class="btn btn-primary">Modifier</a></p>
                    {% else %}
                        <p>Fin de l'abonnement le {{ reservation.endDate|date("d/m/Y") }} <a href="{{ url("app_unite_add_time",{"idReservation":reservation.id}) }}" class="btn btn-primary">Prolonger</a><a href="{{ url("app_reservation_edit",{"idReservation":reservation.id}) }}" class="btn btn-primary">Modifier</a></p>
                    {% endif %}
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Baie</th>
                            <th>Emplacement</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for unite in reservation.unites %}
                            <tr>
                                <td>{{ unite.baie.code }}</td>
                                <td>{{ unite.numSpot }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
